  <script>
    // Theme handling
    const root = document.documentElement;
    const themeToggle = document.getElementById('themeToggle');
    const themeLabel = document.getElementById('themeLabel');
    const savedTheme = localStorage.getItem('theme') || 'dark';
    function applyTheme(theme) {
      if (theme === 'light') {
        root.classList.add('theme-light');
        themeLabel.textContent = 'Light';
      } else {
        root.classList.remove('theme-light');
        themeLabel.textContent = 'Dark';
      }
      localStorage.setItem('theme', theme);
    }
    applyTheme(savedTheme);
    themeToggle.addEventListener('click', () => {
      const next = root.classList.contains('theme-light') ? 'dark' : 'light';
      applyTheme(next);
    });

    // Sidebar for mobile
    const openSidebar = document.getElementById('openSidebar');
    const closeSidebar = document.getElementById('closeSidebar');
    const sidebar = document.getElementById('sidebar');
    const backdrop = document.getElementById('backdrop');
    openSidebar.addEventListener('click', () => { sidebar.classList.add('open'); backdrop.classList.add('show'); });
    closeSidebar.addEventListener('click', () => { sidebar.classList.remove('open'); backdrop.classList.remove('show'); });
    backdrop.addEventListener('click', () => { sidebar.classList.remove('open'); backdrop.classList.remove('show'); });

    // Hero image from CSS var
    const heroImg = document.getElementById('heroImg');
    const heroVar = getComputedStyle(document.documentElement).getPropertyValue('--hero-img').trim();
    if (heroVar && heroVar.startsWith('url(')) {
      const url = heroVar.slice(4, -1).replace(/['"]/g, '');
      heroImg.src = url;
    }

    // Charts
    function makeLineChart() {
      const ctx = document.getElementById('lineChart').getContext('2d');
      return new Chart(ctx, {
        type: 'line',
        data: {
          labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug'],
          datasets: [
            { label: 'Visitors', data: [900, 1200, 1350, 1500, 1800, 2100, 2300, 2600], borderColor: getComputedStyle(root).getPropertyValue('--primary').trim(), tension: .35 },
            { label: 'Signups', data: [120, 160, 190, 210, 260, 300, 340, 370], borderColor: getComputedStyle(root).getPropertyValue('--primary-2').trim(), tension: .35 }
          ]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: true } },
          scales: { y: { grid: { color: 'rgba(128,128,128,.18)' } }, x: { grid: { display: false } } }
        }
      });
    }

    function makeBarChart() {
      const ctx = document.getElementById('barChart').getContext('2d');
      return new Chart(ctx, {
        type: 'bar',
        data: {
          labels: ['Alpha', 'Beta', 'Gamma', 'Delta', 'Epsilon'],
          datasets: [{ label: 'Revenue', data: [32, 41, 25, 38, 29], backgroundColor: getComputedStyle(root).getPropertyValue('--accent').trim() }]
        },
        options: {
          responsive: true,
          plugins: { legend: { display: false } },
          scales: { y: { grid: { color: 'rgba(128,128,128,.18)' } }, x: { grid: { display: false } } }
        }
      });
    }

    let lineChart = makeLineChart();
    let barChart = makeBarChart();

    // Repaint charts when theme toggles (to recalc colors)
    const observer = new MutationObserver(() => {
      lineChart.destroy(); barChart.destroy();
      lineChart = makeLineChart(); barChart = makeBarChart();
    });
    observer.observe(document.documentElement, { attributes: true, attributeFilter: ['class'] });

    // Sortable table
    const table = document.getElementById('dataTable');
    const headers = table.querySelectorAll('th');
    headers.forEach(h => h.addEventListener('click', () => sortBy(h)));

    function sortBy(header) {
      const key = header.dataset.key;
      const type = header.dataset.type || 'string';
      const tbody = table.querySelector('tbody');
      const rows = Array.from(tbody.querySelectorAll('tr'));
      const asc = !(header.dataset.order === 'asc');
      headers.forEach(h => h.removeAttribute('data-order'));
      header.dataset.order = asc ? 'asc' : 'desc';

      rows.sort((a, b) => {
        const A = a.children[Array.from(header.parentElement.children).indexOf(header)].textContent.trim();
        const B = b.children[Array.from(header.parentElement.children).indexOf(header)].textContent.trim();
        if (type === 'number') return (parseFloat(A) - parseFloat(B)) * (asc ? 1 : -1);
        if (type === 'date') return ((new Date(A)) - (new Date(B))) * (asc ? 1 : -1);
        return A.localeCompare(B) * (asc ? 1 : -1);
      });

      rows.forEach(r => tbody.appendChild(r));
    }

    // Tabs
    document.querySelectorAll('.tab').forEach(btn => btn.addEventListener('click', () => {
      document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
      document.querySelectorAll('.tab-panel').forEach(p => p.classList.remove('active'));
      btn.classList.add('active');
      document.getElementById(btn.dataset.tab).classList.add('active');
    }));

    // Accordion
    document.querySelectorAll('.acc-btn').forEach(b => b.addEventListener('click', () => {
      const item = b.closest('.acc-item');
      item.classList.toggle('open');
    }));

    // Modal + Form validation
    const form = document.getElementById('demoForm');
    const modalBackdrop = document.getElementById('modalBackdrop');
    const modalClose = document.getElementById('modalClose');
    const modalOk = document.getElementById('modalOk');

    function openModal() { modalBackdrop.style.display = 'flex'; modalBackdrop.setAttribute('aria-hidden', 'false'); }
    function closeModal() { modalBackdrop.style.display = 'none'; modalBackdrop.setAttribute('aria-hidden', 'true'); }

    modalClose.addEventListener('click', closeModal);
    modalOk.addEventListener('click', closeModal);
    document.addEventListener('keydown', e => { if (e.key === 'Escape') closeModal(); });

    form.addEventListener('submit', e => {
      e.preventDefault();
      if (!form.checkValidity()) { showToast('Please fill in the required fields.'); return; }
      openModal();
    });

    // Toast
    const toast = document.getElementById('toast');
    function showToast(msg) {
      toast.textContent = msg;
      toast.style.display = 'block';
      setTimeout(() => toast.style.display = 'none', 2500);
    }
    document.getElementById('notifyBtn').addEventListener('click', () => showToast('This is a toast. Delicious.'));

    // Drag & Drop
    const dz = document.getElementById('dropzone');
    const list = document.getElementById('fileList');
    const progress = document.getElementById('progressBar');
    const progressLabel = document.getElementById('progressLabel');

    function fakeUpload(files) {
      list.innerHTML = '';
      [...files].forEach(f => {
        const li = document.createElement('li'); li.textContent = `${f.name} (${Math.round(f.size/1024)} KB)`; list.appendChild(li);
      });
      progress.style.width = '0%'; progressLabel.textContent = '0%';
      let pct = 0; const timer = setInterval(() => { pct += Math.random() * 18; if (pct >= 100) { pct = 100; clearInterval(timer); showToast('Upload complete'); }
        progress.style.width = pct + '%'; progressLabel.textContent = Math.round(pct) + '%';
      }, 250);
    }

    function preventDefaults(e) { e.preventDefault(); e.stopPropagation(); }
    ;['dragenter','dragover','dragleave','drop'].forEach(ev => dz.addEventListener(ev, preventDefaults));
    ;['dragenter','dragover'].forEach(ev => dz.addEventListener(ev, () => dz.classList.add('dragover')));
    ;['dragleave','drop'].forEach(ev => dz.addEventListener(ev, () => dz.classList.remove('dragover')));
    dz.addEventListener('drop', e => fakeUpload(e.dataTransfer.files));
    dz.addEventListener('click', () => {
      const input = document.createElement('input'); input.type = 'file'; input.multiple = true; input.onchange = () => fakeUpload(input.files); input.click();
    });

    // Search demo
    const search = document.getElementById('searchInput');
    search.addEventListener('keydown', e => { if (e.key === 'Enter') showToast(`Search: "${search.value}"`); });

    // Footer year
    document.getElementById('year').textContent = new Date().getFullYear();
  </script>
</body>
</html>
